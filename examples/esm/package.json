        "@types/node": "^24.3.0",
        "@typescript-eslint/eslint-plugin": "^8.40.0",
        "@typescript-eslint/parser": "^8.40.0",
        "c8": "^10.1.3",
        "chai": "^5.3.3",
        "dependency-cruiser": "^17.0.2",
        "eslint": "^9.34.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "globals": "^16.3.0",
        "kaukau": "^4.1.7",
        "mocha": "^11.7.1",
        "prettier": "^3.6.2",
