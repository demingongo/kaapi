        "tsx": "^4.20.6",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.40.0"
    },
    "scripts": {
        "build": "tsup src --format esm --outDir dist --clean --metafile",
        "check": "tsc --noEmit",
        "check:deps": "depcruise src --validate",
        "coverage": "c8 node --loader ts-node/esm --experimental-specifier-resolution=node --no-warnings ./node_modules/mocha/bin/mocha test/**/*.test.ts",
        "dev": "tsx watch --env-file=.env src/index.ts",
        "format": "dotenvx run -f .env.format -- prettier --write ./",
        "format:check": "dotenvx run -f .env.format -- prettier --check ./",
        "lint": "eslint .",
        "start": "node dist/index.js",
        "test": "node --loader ts-node/esm --experimental-specifier-resolution=node --no-warnings ./node_modules/mocha/bin/mocha test/**/*.test.ts",
        "test:kaukau": "node --loader ts-node/esm --experimental-specifier-resolution=node --no-warnings ./node_modules/kaukau/bin/kaukau -f test --ext .test.ts"
    }
}